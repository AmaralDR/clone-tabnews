{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "npx prettier --check .",
    "lint:fix": "npx prettier --write .",
    "pretest": "npm run services:up",
    "test": "concurrently -n next,jest --hide next -k -s command-jest 'next dev' 'jest --runInBand'",
    "test:cov": "npx jest --coverage",
    "test:watch": "npx jest --watchAll --runInBand",
    "dev:infra:start": "docker compose -f infra/compose.yaml up -d",
    "dev:infra:stop": "docker compose -f infra/compose.yaml stop",
    "migration:create": "npx node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "keywords": [],
  "author": "Diego Amaral (AmaralDR)",
  "license": "ISC",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.6.2",
    "prettier": "^2.8.8"
  }
}
